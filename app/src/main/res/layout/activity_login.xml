<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cm.xingyu.shareapp.LoginActivity">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:drawableLeft="@drawable/pocket"
        android:text="OrgDown"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/login_line"
        android:layout_width="180dp"
        android:layout_height="2px"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark" />






    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_below="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/g_RL"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableLeft="@drawable/g"
                android:id="@+id/google_login"
                android:text="通过Google登录"
                android:layout_centerHorizontal="true"
                android:layout_width="220dp"
                android:layout_height="66dp" />

        </RelativeLayout>
        <TextView
            android:layout_toLeftOf="@+id/or_tv"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/g_RL"
            android:background="@color/black"
            android:id="@+id/left_or"
            android:layout_width="85dp"
            android:layout_height="1px" />

        <TextView
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/g_RL"
            android:id="@+id/or_tv"
            android:text="or"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/or_tv"
            android:layout_below="@+id/g_RL"
            android:background="@color/black"
            android:id="@+id/right_or"
            android:layout_width="85dp"
            android:layout_height="1px" />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/right_or"
            android:id="@+id/login_email"
            android:hint="@string/hint_mail"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_centerHorizontal="true"
            android:hint="密码"
            android:layout_below="@+id/login_email"
            android:id="@+id/login_password"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_password"
            android:text="忘记密码？"
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/forget_password"
            android:id="@+id/forget_password_line"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_width="76dp"
            android:layout_height="1px" />

        <RelativeLayout
          android:background="@color/lightGrey"
            android:paddingBottom="0dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:text="取消"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/login"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/orangeYellow"
                android:layout_alignParentRight="true"
                android:text="登录"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
