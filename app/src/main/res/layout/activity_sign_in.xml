<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cm.xingyu.shareapp.BaseActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/pocket"
            android:text="OrgDown"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/login_line"
            android:layout_width="180dp"
            android:layout_height="2px"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@color/colorPrimaryDark" />
        <RelativeLayout
            android:id="@+id/info_RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="名字"
                />

            <EditText
                android:id="@+id/second_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name"
                android:hint="姓氏" />

            <EditText
                android:id="@+id/email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_name"
                android:hint="电子邮箱地址" />

            <EditText
                android:id="@+id/password"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:hint="密码" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGrey">

            <Button
                android:id="@+id/sign_in_cancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:text="取消" />

            <Button
                android:id="@+id/sign_in"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/orangeYellow"
                android:text="注册" />
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
